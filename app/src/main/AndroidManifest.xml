        android:theme="@style/Theme.MyMechanic"
        tools:targetApi="31">
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".ui.MapActivity"
            android:exported="false" />
        <activity
            android:name=".EditProfileActivity"
