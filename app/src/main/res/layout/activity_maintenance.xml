<!--                android:layout_alignParentBottom="true">-->

<!--            </TextView>-->

            <Button
                android:id="@+id/enter_last_cl_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="220dp"
                android:layout_marginBottom="85dp"
                android:fontFamily="@font/racing_sans_one"
                android:text="Enter Last CL Check Date"
                android:textColor="#000000"
                android:background="#ffffff"
                android:textSize="12sp"></Button>

            <TextView
                android:id="@+id/last_cl_check_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="220dp"
                android:layout_marginBottom="48dp"
                android:fontFamily="@font/racing_sans_one"
                android:text="Last CL Check: "
                android:textSize="12sp"
                android:layout_alignParentBottom="true">

            </TextView>

            <TextView
                android:id="@+id/last_cl_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="315dp"
                android:layout_marginBottom="48dp"
                android:fontFamily="@font/racing_sans_one"
                android:text="DATE"
                android:textSize="12sp"
                android:layout_alignParentBottom="true">

            </TextView>



            <TextView
                android:id="@+id/next_cl_date"
                android:layout_width="wrap_content"
